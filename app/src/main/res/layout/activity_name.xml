<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
    android:background="@drawable/sigunup_background">

  <TextView
    android:id="@+id/tv_start_message"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:lineSpacingExtra="15sp"
    android:textColor="@color/colorAccent"
    android:layout_marginStart="45dp"
    android:layout_marginTop="92dp"
    android:text="반가워요!"
    android:textSize="30dp"
    android:textStyle="bold"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintEnd_toStartOf="@+id/iv_start_icon"
    app:layout_constraintBottom_toTopOf="@+id/tv_name_result"/>
  <ImageView
    android:id="@+id/iv_start_icon"
    android:layout_width="26dp"
    android:layout_height="23dp"
    android:src="@drawable/icon_heart"
    android:layout_marginStart="4dp"
    app:layout_constraintTop_toTopOf="@id/tv_start_message"
    app:layout_constraintBottom_toBottomOf="@id/tv_start_message"
    app:layout_constraintStart_toEndOf="@id/tv_start_message"/>
  <TextView
    android:id="@+id/tv_name_result"
    android:layout_width="180dp"
    android:layout_height="wrap_content"
    android:textColor="@color/colorBlack"
    android:text="사용자"
    android:textSize="24dp"
    android:textStyle="bold"
    android:gravity="start|center_horizontal"
    android:layout_marginTop="16dp"
    app:layout_constraintTop_toBottomOf="@id/tv_start_message"
    app:layout_constraintStart_toStartOf="@id/tv_start_message"
    app:layout_constraintEnd_toStartOf="@+id/tv_name_endpoint"
    app:layout_constraintBottom_toTopOf="@+id/v_underLine"/>
  <TextView
    android:id="@+id/tv_name_endpoint"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingStart="4dp"
    android:text="님"
    android:textColor="@color/colorBlueGray"
    android:textSize="17dp"
    android:textStyle="bold"
    app:layout_constraintStart_toEndOf="@id/tv_name_result"
    app:layout_constraintEnd_toStartOf="@+id/iv_change_button"
    app:layout_constraintBottom_toBottomOf="@id/tv_name_result"/>
  <ImageView
    android:id="@+id/iv_change_button"
    android:layout_width="20dp"
    android:layout_height="20dp"
    android:layout_marginStart="6dp"
    android:src="@drawable/icon_change"
    app:layout_constraintStart_toEndOf="@id/tv_name_endpoint"
    app:layout_constraintBottom_toBottomOf="@id/tv_name_endpoint"/>
  <View
    android:id="@+id/v_underLine"
    android:layout_width="245dp"
    android:layout_height="1dp"
    android:background="@color/colorBlueGray"
    android:layout_marginTop="4dp"
    app:layout_constraintTop_toBottomOf="@id/tv_name_result"
    app:layout_constraintStart_toStartOf="parent"/>
  <Button
    android:id="@+id/btn_name_submit"
    android:layout_width="244dp"
    android:layout_height="43dp"
    android:background="@drawable/item_radius2"
    android:drawableEnd="@drawable/icon_next_arrow"
    android:paddingEnd="8dp"
    android:layout_marginBottom="10dp"
    android:text="다행 앱 시작하기"
    android:textColor="@color/white"
    android:textSize="19dp"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintBottom_toTopOf="@+id/tv_start_button_message"/>
  <TextView
    android:id="@+id/tv_start_button_message"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:lineSpacingExtra="6sp"
    android:layout_marginBottom="60dp"
    android:text="본격적으로 신나는 여행을 시작해볼까요?"
    android:textColor="@color/black"
    android:textSize="13dp"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"/>


</android.support.constraint.ConstraintLayout>