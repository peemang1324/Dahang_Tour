<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.KeywordActivity"
    android:orientation="vertical"
    android:background="@drawable/back_ground"
    android:padding="30dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="검색어 기반 상세 검색"
        android:textSize="25dp"
        android:gravity="center"
        android:textStyle="bold"
        android:padding="5dp"
        android:layout_marginBottom="20dp"
        android:textColor="@android:color/black"
        android:fontFamily="@font/saemael"
        android:background="@drawable/corner"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:background="@drawable/corner"
        android:padding="5dp">
        <EditText
            android:layout_gravity="bottom"
            android:layout_weight="11.5"
            android:id="@+id/keword"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/saemael"
            android:hint="검색 키워드를 입력하세요."

            android:textSize="20dp"/>
        <Button
            android:layout_weight="2"
            android:id="@+id/search"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_gravity="right"
            android:background="@drawable/ic_search2" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/corner"
        android:padding="10dp">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:typeface="sans"
        android:textColor="@android:color/black"
        android:gravity="center"
        android:textSize="20dp"
        android:fontFamily="@font/saemael"
        android:text="세부 검색(선택)"/>

    <Button
        android:id="@+id/arrange"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="정렬구분 선택(조회순, 제목순 등)"
        android:fontFamily="@font/saemael"
        android:textSize="20dp"/>
    <TextView
        android:id="@+id/arrangeSlct"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="정렬구분: 없음"
        android:layout_marginBottom="10dp"
        android:fontFamily="@font/saemael"
        android:textSize="20dp"/>
    <Button
        android:id="@+id/dosi"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="특별/광역시, 도 선택"
        android:fontFamily="@font/saemael"
        android:textSize="20dp"/>
    <TextView
        android:id="@+id/dosiSlct"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="특별/광역시, 도: 없음"
        android:layout_marginBottom="10dp"
        android:fontFamily="@font/saemael"
        android:textSize="20dp"/>
    <Button
        android:id="@+id/sigungu"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="시, 군, 구 선택"
        android:fontFamily="@font/saemael"
        android:textSize="20dp"/>
    <TextView
        android:id="@+id/sigunguSlct"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="시, 군, 구: 없음"
        android:layout_marginBottom="10dp"
        android:fontFamily="@font/saemael"
        android:textSize="20dp"/>
    <Button
        android:id="@+id/content"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="여행 콘텐츠 선택"
        android:fontFamily="@font/saemael"
        android:textSize="20dp"/>
    <TextView
        android:id="@+id/contentSlct"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="여행 콘텐츠: 없음"
        android:layout_marginBottom="10dp"
        android:fontFamily="@font/saemael"
        android:textSize="20dp"/>
    </LinearLayout>



</LinearLayout>