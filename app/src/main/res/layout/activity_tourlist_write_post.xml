<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/sigunup_background">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">


            <EditText
                android:id="@+id/et_post_title"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.6"
                android:padding="15dp"
                android:textSize="15dp"
                android:gravity="center_vertical"
                android:hint="제목을 입력하세요"
                android:maxLength="50"
                android:layout_marginBottom="10dp"
                android:background="@drawable/text_border"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/text_border"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="140dp"
                        android:layout_height="match_parent"
                        android:padding="15dp"
                        android:layout_margin="5dp"
                        android:text="시간당 금액(원)"
                        android:textSize="15dp" />

                    <EditText
                        android:id="@+id/et_post_guide_pay"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="4"
                        android:background="@drawable/text_border"
                        android:hint="금액을 입력하세요"
                        android:layout_margin="5dp"
                        android:padding="15dp"
                        android:textSize="15dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="140dp"
                        android:layout_height="match_parent"
                        android:padding="15dp"
                        android:layout_margin="5dp"
                        android:text="원하는 여행 시간"
                        android:textSize="15dp" />

                    <EditText
                        android:id="@+id/et_post_guide_hour"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="4"
                        android:background="@drawable/text_border"
                        android:hint="시간을 입력하세요"
                        android:layout_margin="5dp"
                        android:padding="15dp"
                        android:textSize="15dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="140dp"
                        android:layout_height="match_parent"
                        android:layout_margin="5dp"
                        android:padding="15dp"
                        android:text="자동차 소유여부"
                        android:textSize="15dp" />

                    <RadioGroup
                        android:id="@+id/rg_car"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:layout_marginTop="10dp"
                            android:fontFamily="@font/nanumsquare_otfb"
                            android:letterSpacing="-0.02"
                            android:text="예"
                            android:textColor="#ffffff"
                            android:textSize="13sp" />

                        <android.support.v7.widget.AppCompatRadioButton
                            android:id="@+id/rb_car_yes"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:buttonTint="#000000" />


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:layout_marginTop="10dp"
                            android:fontFamily="@font/nanumsquare_otfb"
                            android:letterSpacing="-0.02"
                            android:text="아니오"
                            android:textColor="#ffffff"
                            android:textSize="13sp" />

                        <android.support.v7.widget.AppCompatRadioButton
                            android:id="@+id/rb_car_no"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:buttonTint="#000000" />

                    </RadioGroup>


                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/contents_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <include
                        layout="@layout/view_contents_edit_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/bt_post_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/button_bg"
                    android:foreground="?attr/selectableItemBackgroundBorderless"
                    android:letterSpacing="-0.02"
                    android:text="이미지"
                    android:textColor="#ffffff"
                    android:textSize="12sp" />

                <Button
                    android:id="@+id/bt_post_video"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/button_bg"
                    android:foreground="?attr/selectableItemBackgroundBorderless"
                    android:letterSpacing="-0.02"
                    android:text="동영상"
                    android:textColor="#ffffff"
                    android:textSize="12sp" />
            </LinearLayout>

            <Button
                android:id="@+id/bt_post"
                android:layout_width="match_parent"
                android:layout_margin="5dp"
                android:layout_height="wrap_content"
                android:background="@drawable/button_bg"
                android:foreground="?attr/selectableItemBackgroundBorderless"
                android:letterSpacing="-0.02"
                android:text="게시글 작성"
                android:textColor="#ffffff"
                android:textSize="12sp" />

        </LinearLayout>

    </ScrollView>

    <RelativeLayout
        android:id="@+id/rl_post_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#91646464"
        android:visibility="gone">


        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:elevation="10dp"
            app:cardCornerRadius="15dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="5dp">

                <Button
                    android:id="@+id/bt_edit_postimage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="이미지 수정" />

                <Button
                    android:id="@+id/bt_edit_postvideo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="비디오 수정" />

                <Button
                    android:id="@+id/bt_delete_contents"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="삭제" />
            </LinearLayout>

        </android.support.v7.widget.CardView>

    </RelativeLayout>

    <include
        layout="@layout/view_loader"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"/>

</RelativeLayout>